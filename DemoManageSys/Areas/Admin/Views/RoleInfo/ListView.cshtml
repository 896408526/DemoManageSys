
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuimini/css/public.css" media="all">
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">

            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">角色名</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="roleName" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit lay-filter="data-search-btn"><i class="layui-icon"></i> 搜 索</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>

            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> 添加 </button>
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 删除 </button>
                </div>
            </script>

            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

            <script type="text/html" id="currentTableBar">
                @*{{# if(d.isDelete == false){}}*@
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="edit">编辑</a>
                <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">删除</a>
                <a class="layui-btn layui-btn-xs layui-btn-container data-count-banduser" lay-event="bandUser">绑定用户</a>
                <a class="layui-btn layui-btn-xs layui-btn-danger data-count-bandmenu" lay-event="bandMenu">绑定菜单</a>
                @*{{# } else {}}
                <a class="layui-btn layui-btn-xs layui-btn-container data-count-updateBack" lay-event="updateBack">还原</a>
                {{# } }}*@
            </script>
        </div>
    </div>
    <script src="/layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        var table;
        layui.use(['form', 'table'], function () {
            var $ = layui.jquery,
                form = layui.form;

            table = layui.table;

            table.render({
                elem: '#currentTableId',
                url: '/Admin/RoleInfo/GetRoleInfoes',
                toolbar: '#toolbarDemo',
                defaultToolbar: ['filter', 'exports', 'print', {
                    title: '提示',
                    layEvent: 'LAYTABLE_TIPS',
                    icon: 'layui-icon-tips'
                }],
                cols: [
                    [
                        { type: "checkbox" },
                        { field: 'id', title: 'ID', sort: true, hide: true },
                        { field: 'roleName', title: '角色名', sort: true },
                        { field: 'description', title: '描述' },
                        { field: 'createTime', title: '添加时间', sort: true },
                        { title: '操作', toolbar: '#currentTableBar', align: "center" }
                    ]
                ],
                limits: [10, 15, 20, 25, 50, 100],
                limit: 15,
                page: true,
                skin: 'line'
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {
                var resule = data.field;
                //执行搜索重载
                table.reload('currentTableId', {
                    page: {
                        curr: 1
                    }
                    , where: {
                        roleName: resule.roleName,
                    }
                }, 'data');

                return false;
            });

            /**
             * toolbar监听事件
             */
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {  // 监听添加操作
                    var index = layer.open({
                        title: '添加用户',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Admin/RoleInfo/CreateView',
                    });
                    $(window).on("resize", function () {
                    });
                } else if (obj.event === 'delete') {  // 监听删除操作
                    var checkStatus = table.checkStatus('currentTableId')
                        , data = checkStatus.data;

                    var userId = [];
                    if (data.length > 0) {
                        layer.confirm('你确定要删除吗?', function () {
                            for (var i = 0; i < data.length; i++) {
                                let id = data[i].id;
                                userId.push(id);
                            }

                            $.ajax({
                                url: "/Admin/RoleInfo/DeleteListRoleInfo",
                                type: "Post",
                                data: {
                                    ids: userId
                                },
                                success: function (res) {
                                    if (res.code == 200) {
                                        //执行搜索重载
                                        table.reload('currentTableId', {
                                            page: {
                                                curr: 1
                                            }
                                            , where: {

                                            }
                                        }, 'data');
                                        layer.alert(res.msg);
                                        layer.close(index);
                                    } else {
                                        layer.alert(res.msg);
                                    }
                                }
                            })
                        })
                    }
                }
            });

            //监听表格复选框选择
            table.on('checkbox(currentTableFilter)', function (obj) {
                console.log(obj)
            });

            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {
                    var index = layer.open({
                        title: '编辑用户',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Admin/RoleInfo/EditView?id=' + data.id,
                        success: function (layero, index) {
                            var iframe = window['layui-layer-iframe' + index];
                            iframe.getParentDate(data);
                            console.log(data)
                        }
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });

                    return false;
                }
                else if (obj.event === 'delete') {
                    layer.confirm('真的删除行么', function (index) {
                        $.ajax({
                            url: "/Admin/RoleInfo/DeleteRoleInfo",
                            type: "Post",
                            data: {
                                id: data.id
                            },
                            success: function (res) {
                                if (res.code == 200) {
                                    console.log(data.id)
                                    layer.close(index);//弹框提示
                                    obj.del();//进行删除
                                    layer.msg(res.msg);//提示

                                } else {
                                    layer.msg(res.msg);//提示
                                }
                            }
                        })
                    });
                } else if (obj.event === 'bandUser') {
                    var index = layer.open({
                        title: '绑定用户',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Admin/RoleInfo/BindUserInfoView?id=' + data.id,
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });

                    return false;

                } else if (obj.event === 'bandMenu') {
                    var index = layer.open({
                        title: '绑定菜单',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Admin/RoleInfo/BindMenuInfoView?id=' + data.id,
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });

                }
            });
        });
    </script>
</body>
</html>
